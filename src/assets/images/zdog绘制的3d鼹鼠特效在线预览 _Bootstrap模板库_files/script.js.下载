var sceneSize=80;var isSpinning=true;var TAU=Zdog.TAU;var bodyColor="#955";var groundColor="#c85";var blackColor="#333";var eyelightColor="#fff";var noseColor="#e8a";var rocksLightColor="#d96";var rocksDarkColor="#a63";var grassColor="#584";var illo=new Zdog.Illustration({element:".zdog-canvas",dragRotate:true,resize:"fullscreen",onDragStart:function(){isSpinning=false},onResize:function(b,a){this.zoom=Math.floor(Math.min(b,a)/sceneSize)},});var bodyGroup=new Zdog.Group({addTo:illo});var body=new Zdog.Cylinder({diameter:20,length:20,rotate:{x:TAU/4},translate:{y:0},addTo:illo,color:bodyColor,stroke:1});var bodyCap=new Zdog.Hemisphere({diameter:20,rotate:{x:TAU/4},translate:{y:-10},addTo:illo,color:bodyColor,stroke:1});var nose=new Zdog.Ellipse({width:4,height:2,translate:{z:11,y:-4},rotate:{x:TAU/4},addTo:illo,color:noseColor,stroke:5});var eyeDistance=3.5;var eyeLeftGroup=new Zdog.Group({addTo:illo,});var eyeLeft=new Zdog.Ellipse({width:1,height:4,translate:{z:10,y:-10,x:eyeDistance},rotate:{x:TAU/60,y:-TAU/40},addTo:eyeLeftGroup,color:blackColor,stroke:2});var eyeLightLeft=new Zdog.Ellipse({width:0.25,height:1,translate:{z:10,y:-11.5,x:eyeDistance},rotate:{x:TAU/60,y:-TAU/40},addTo:eyeLeftGroup,color:eyelightColor,stroke:1});var eyeRightGroup=new Zdog.Group({addTo:illo,});var eyeRight=new Zdog.Ellipse({width:1,height:4,translate:{z:10,y:-10,x:-eyeDistance},rotate:{x:TAU/60,y:TAU/40},addTo:eyeRightGroup,color:blackColor,stroke:2});var eyeLightRight=new Zdog.Ellipse({width:0.25,height:1,translate:{z:10,y:-11.5,x:-eyeDistance},rotate:{x:TAU/60,y:TAU/40},addTo:eyeRightGroup,color:eyelightColor,stroke:1});var ground=new Zdog.Ellipse({diameter:80,rotate:{x:TAU/4},translate:{y:12},addTo:illo,color:groundColor,stroke:3,fill:true});var rockCount=20;var rockAngleOffset=TAU/rockCount;var rockRadius=9;var rockRadiusRandom=4;var rockHeightRandom=2;for(var i=0;i<rockCount;i++){var angle=i*rockAngleOffset+(Math.random()*0.3);var radius=(rockRadius+Math.random()*rockRadiusRandom);var x=Math.cos(angle)*radius;var y=Math.sin(angle)*radius;var height=-1-(Math.random()*rockHeightRandom);var rocksA=new Zdog.Shape({translate:{y:10},addTo:illo,color:rocksLightColor,stroke:4,path:[{move:{z:y,y:0,x:x}},{line:{z:y,y:height,x:x}},]})}for(var i=0;i<rockCount;i++){var angle=i*rockAngleOffset+(Math.random()*0.3);var radius=(rockRadius+Math.random()*rockRadiusRandom);var x=Math.cos(angle)*radius;var y=Math.sin(angle)*radius;var height=-1-(Math.random()*rockHeightRandom);var rocksB=new Zdog.Shape({translate:{y:10},addTo:illo,color:rocksDarkColor,stroke:4,path:[{move:{z:y,y:0,x:x}},{line:{z:y,y:height,x:x}},]})}var rockCount=40;var rockAngleOffset=TAU/rockCount;var rockRadius=9;var rockRadiusRandom=30;var rockHeightRandom=1;for(var i=0;i<rockCount;i++){var angle=i*rockAngleOffset+(Math.random()*0.3);var radius=(rockRadius+Math.random()*rockRadiusRandom);var x=Math.cos(angle)*radius;var y=Math.sin(angle)*radius;var height=-1-(Math.random()*rockHeightRandom);var grass=new Zdog.Shape({translate:{y:10},addTo:illo,color:grassColor,stroke:2,path:[{move:{z:y,y:0,x:x}},{line:{z:y,y:height,x:x}},]})}illo.rotate.x=-0.2;function animate(a){illo.rotate.y+=isSpinning?-0.03:0;illo.updateRenderGraph();requestAnimationFrame(animate)}animate();